{% extends 'base.html.twig' %}

{% block title %}Contact - Forge & Dev{% endblock %}

{% block body %}

<!-- ========================= HERO ========================= -->
<section id="hero-contact" class="section-metal hero bg-dark-custom text-light py-5">
    <div class="container text-center">
        <h1 class="display-4 text-bronze fw-bold mb-3 animate-on-scroll">Contact</h1>
        <p class="lead text-light animate-on-scroll">
            Vous avez un projet ? Une question ? N'hésitez pas à nous contacter.
        </p>
    </div>
</section>

<!-- ========================= FORMULAIRE & INFOS ========================= -->
<section id="contact-form" class="section-metal py-5 text-light">
    <div class="container">
        <h2 class="mb-5 text-center text-bronze animate-on-scroll">Nous contacter</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} animate-on-scroll" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row g-5">

            <!-- Formulaire -->
            <div class="col-md-6 animate-on-scroll">
                <form action="{{ path('contact') }}" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" id="name" name="name" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label">Téléphone</label>
                        <input type="tel" id="phone" name="phone" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="subject" class="form-label">Objet</label>
                        <input type="text" id="subject" name="subject" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="project_type" class="form-label">Type de projet</label>
                        <select id="project_type" name="project_type" class="form-select" required>
                            <option value="" disabled selected>Choisissez un type de projet</option>
                            <option value="escalier">Escalier</option>
                            <option value="portail">Portail</option>
                            <option value="garde-corps">Garde-corps</option>
                            <option value="serrurerie">Serrurerie</option>
                            <option value="mobilier">Mobilier décoratif</option>
                            <option value="autre">Autre</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea id="message" name="message" rows="6" class="form-control" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary mt-3" aria-label="Envoyer le formulaire de contact">Envoyer</button>
                </form>
            </div>

            <!-- Coordonnées -->
            <div class="col-md-6 animate-on-scroll">
                <h3 class="text-bronze mb-3">Coordonnées</h3>
                <p><i class="bi bi-telephone-fill me-2"></i> <a href="tel: 06 06 83 85 47">06 06 83 85 47</a></p>
                <p><i class="bi bi-envelope-fill me-2"></i> <a href="mailto:contact@forge-dev.fr">contact@forge-dev.fr</a></p>
                <p><i class="bi bi-geo-alt-fill me-2"></i> 33920 Saint Christoly de Blaye</p>

                <!-- Carte (optionnelle) -->
                <div class="mt-4">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2782.123456789!2d-0.555555!3d45.123456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd5555555!2sSaint+Christoly+de+Blaye!5e0!3m2!1sfr!2sfr!4v1699999999999" 
                        width="100%" 
                        height="350" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>

        </div>
    </div>
</section>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            alert.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-20px)';
            setTimeout(() => alert.remove(), 500);
        }, 5000);
    });
});
</script>

{% endblock %}

