{% extends 'base.html.twig' %}

{% block title %}Contact - Forge & Dev{% endblock %}

{% block body %}

<!-- ========================= HERO ========================= -->
<section id="hero-contact" class="section-metal hero bg-dark-custom text-light py-5">
    <div class="container text-center">
        <h1 class="display-4 text-bronze fw-bold mb-3 animate-on-scroll">Contact</h1>
        <p class="lead text-light animate-on-scroll">
            Vous avez un projet ? Une question ? N'hésitez pas à nous contacter.
        </p>
    </div>
</section>

<!-- ========================= FORMULAIRE & INFOS ========================= -->
<section id="contact-form" class="section-metal py-5 text-light">
    <div class="container">
        <h2 class="mb-5 text-center text-bronze animate-on-scroll">Nous contacter</h2>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} animate-on-scroll" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="row g-5">
            <!-- Formulaire -->
            <div class="col-md-6 col-12 animate-on-scroll">
                {{ form_start(contactForm, {'attr': {'novalidate': 'novalidate'}}) }}

                {# Nom #}
                <div class="mb-3">
                    {{ form_label(contactForm.name) }}
                    {{ form_widget(contactForm.name, {
                        'attr': {
                            'placeholder': 'Votre nom',
                            'aria-label': 'Nom',
                            'maxlength': 255,
                            'class': 'form-control' ~ (contactForm.name.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.name) }}
                </div>

                {# Téléphone #}
                <div class="mb-3">
                    {{ form_label(contactForm.phone) }}
                    {{ form_widget(contactForm.phone, {
                        'attr': {
                            'placeholder': 'Votre téléphone',
                            'aria-label': 'Téléphone',
                            'maxlength': 20,
                            'class': 'form-control' ~ (contactForm.phone.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.phone) }}
                </div>

                {# Email #}
                <div class="mb-3">
                    {{ form_label(contactForm.email) }}
                    {{ form_widget(contactForm.email, {
                        'attr': {
                            'placeholder': 'Votre email',
                            'aria-label': 'Email',
                            'maxlength': 255,
                            'class': 'form-control' ~ (contactForm.email.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.email) }}
                </div>

                {# Objet #}
                <div class="mb-3">
                    {{ form_label(contactForm.subject) }}
                    {{ form_widget(contactForm.subject, {
                        'attr': {
                            'placeholder': 'Objet de votre message',
                            'aria-label': 'Objet',
                            'maxlength': 255,
                            'class': 'form-control' ~ (contactForm.subject.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.subject) }}
                </div>

                {# Type de projet #}
                <div class="mb-3">
                    {{ form_label(contactForm.project_type) }}
                    {{ form_widget(contactForm.project_type, {
                        'attr': {
                            'aria-label': 'Type de projet',
                            'class': 'form-select' ~ (contactForm.project_type.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.project_type) }}
                </div>

                {# Message #}
                <div class="mb-3">
                    {{ form_label(contactForm.message) }}
                    {{ form_widget(contactForm.message, {
                        'attr': {
                            'placeholder': 'Votre message...',
                            'aria-label': 'Message',
                            'rows': 6,
                            'maxlength': 2000,
                            'class': 'form-control' ~ (contactForm.message.vars.valid ? '' : ' is-invalid')
                        }
                    }) }}
                    {{ form_errors(contactForm.message) }}
                </div>

                {# Honeypot invisible #}
                {{ form_widget(contactForm.honeypot, {'attr': {'style': 'display:none', 'tabindex': '-1', 'autocomplete': 'off'}}) }}

                {# Bouton submit #}
                <div class="mb-3">
                    {{ form_widget(contactForm.submit, {'attr': {'class': 'btn btn-primary mt-3'}}) }}
                </div>

                {{ form_end(contactForm) }}
            </div>

            <!-- Coordonnées -->
            <div class="col-md-6 col-12 animate-on-scroll">
                <h3 class="text-bronze mb-3">Coordonnées</h3>
                <p><i class="bi bi-telephone-fill me-2"></i> <a href="tel:0606838547">06 06 83 85 47</a></p>
                <p><i class="bi bi-envelope-fill me-2"></i> <a href="mailto:contact@forge-dev.fr">contact@forge-dev.fr</a></p>
                <p><i class="bi bi-geo-alt-fill me-2"></i> 33920 Saint Christoly de Blaye</p>

                <div class="mt-4">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2782.123456789!2d-0.555555!3d45.123456!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd5555555!2sSaint+Christoly+de+Blaye!5e0!3m2!1sfr!2sfr!4v1699999999999" 
                        width="100%" 
                        height="350" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
document.addEventListener("DOMContentLoaded", () => {
    // Scroll vers le premier champ avec erreur
    const firstErrorField = document.querySelector('.is-invalid');
    if (firstErrorField) {
        firstErrorField.scrollIntoView({ behavior: 'smooth', block: 'center' });
        firstErrorField.focus();
    }

    // Fermeture automatique des alertes flash
    const alerts = document.querySelectorAll('.alert');
    alerts.forEach(alert => {
        setTimeout(() => {
            alert.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-20px)';
            setTimeout(() => alert.remove(), 500);
        }, 5000);
    });
});
</script>

{% endblock %}
