{% extends 'base.html.twig' %}

{% block title %}Accueil - Forge & Dev{% endblock %}

{% block body %}

<!-- ========================= HERO ========================= -->
<section id="hero" class="section-metal hero bg-dark-custom text-light py-5">
    <div class="container text-center">
        <img src="{{ asset('images/logo.png') }}" alt="Logo Forge & Dev" class="mb-3 hero-logo">
        <h1 class="display-4 text-bronze fw-bold mb-3 hero-title">
            Métallerie, chaudronnerie, serrurerie sur mesure
        </h1>
        <p class="lead text-light mb-3 hero-text">
            Fabrication, réparation et création métallique artisanale
        </p>
        <a href="{{ path('contact') }}" class="btn btn-primary btn-lg mt-3 hero-cta">
            Demander un devis
        </a>
    </div>
</section>

<!-- ========================= ACTUALITÉS ========================= -->
<section id="actualites" class="section-metal py-5 text-light">
    <div class="container">
        <h2 class="mb-4 text-center text-bronze animate-on-scroll">Actualités</h2>

        {% if actualites|length > 0 %}
            <div id="carouselActualites" class="carousel slide animate-on-scroll" data-bs-ride="carousel">
                <div class="carousel-inner">

                    {% for actualite in actualites %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <div class="text-center fs-5 animate-on-scroll">
                                {{ actualite.contenu }}
                            </div>
                        </div>
                    {% endfor %}

                </div>

                {% if actualites|length > 1 %}
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselActualites" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>

                    <button class="carousel-control-next" type="button" data-bs-target="#carouselActualites" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                {% endif %}
            </div>
        {% else %}
            <p class="text-center fs-5 animate-on-scroll">
                Aucune actualité pour le moment.
            </p>
        {% endif %}
    </div>
</section>

<!-- ========================= PRESTATIONS ========================= -->
<section id="prestations" class="section-metal py-5 text-light">
    <div class="container">
        <h2 class="mb-5 text-center text-bronze animate-on-scroll">Nos prestations</h2>

        <div class="row g-4">
            {% for prestation in ['Métallerie', 'Chaudronnerie', 'Serrurerie'] %}
                <div class="col-md-4 animate-on-scroll">
                    <div class="card h-100 text-center">
                        <i class="bi {% if prestation == 'Métallerie' %}bi-tools{% elseif prestation == 'Chaudronnerie' %}bi-hammer{% else %}bi-lock{% endif %} text-bronze fs-1 mb-2 animate-on-scroll"></i>
                        <div class="card-body animate-on-scroll">
                            <h5 class="card-title text-bronze animate-on-scroll">{{ prestation }}</h5>
                            <p class="card-text animate-on-scroll">
                                {% if prestation == 'Métallerie' %}
                                    Travail du métal sur mesure pour tous vos projets.
                                {% elseif prestation == 'Chaudronnerie' %}
                                    Fabrication et réparation d’éléments métalliques complexes.
                                {% else %}
                                    Assemblage précis et durable de tous types de métaux.
                                {% endif %}
                            </p>
                            <a href="{{ path('prestation') }}" class="btn btn-outline-primary animate-on-scroll">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- ========================= SAVOIR-FAIRE ========================= -->
<section id="savoir-faire" class="section-metal py-5 text-light">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-md-6 animate-on-scroll">
                <img src="{{ asset('images/savoir-faire.webp') }}" class="img-fluid rounded shadow-lg" alt="Soudure avec étincelle">
            </div>
            <div class="col-md-6 animate-on-scroll">
                <h2 class="text-bronze mb-3 animate-on-scroll">Notre savoir-faire</h2>
                <p class="fs-5 animate-on-scroll">
                    Avec plus de 20 ans d’expérience dans la métallurgie artisanale, nous réalisons
                    tous vos projets sur mesure avec précision, passion et exigence.
                </p>
                <a href="{{ path('a_propos') }}" class="btn btn-primary mt-3 animate-on-scroll">En savoir plus</a>
            </div>
        </div>
    </div>
</section>

<!-- ========================= RÉALISATIONS ========================= -->
<section id="realisations" class="section-metal py-5 text-light">
    <div class="container">
        <h2 class="mb-5 text-center text-bronze animate-on-scroll">Nos réalisations</h2>

        <div class="row g-4">
            {% for real in homeRealisations %}
                <div class="col-md-4 animate-on-scroll">
                    <a href="{{ path('realisation') }}" class="realisation-link animate-on-scroll">
                        <img 
                            src="{{ asset('uploads/realisations/' ~ real.image) }}" 
                            class="realisation-img animate-on-scroll" 
                            alt="{{ real.titre }}"
                        >
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- ========================= CTA ========================= -->
<section id="cta" class="section-metal py-5 text-light text-center">
    <div class="container">
        <h2 class="text-bronze mb-3 animate-on-scroll">Un projet ? Une idée ?</h2>
        <p class="fs-5 animate-on-scroll">Contactez-nous pour un devis personnalisé et gratuit.</p>
        <a href="{{ path('contact') }}" class="btn btn-primary btn-lg mt-3 animate-on-scroll">Contact</a>
    </div>
</section>

{% endblock %}
